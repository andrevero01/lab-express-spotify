<div class="tracks-sections">
  <h2>Title</h2>
  <h2>Listen</h2>
</div>
{{#each tracks}}
  <ul class="tracks-info">
    <li>{{this.name}}</li>
    <audio src="{{this.preview_url}}" controls>
      Your browser does not support the
      <code>audio</code>
      element.
    </audio>
  </ul>
{{/each}}